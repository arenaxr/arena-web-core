{
  "name": "arena-core",
  "version": "1.0.0",
  "description": "Core browser client for ARENA",
  "browser": "index.js",
  "browserslist": [
    "last 3 firefox versions",
    "last 3 and_chr versions",
    "last 3 chrome versions",
    "last 3 opera versions",
    "last 3 ios_saf versions",
    "last 3 safari versions"
  ],
  "dependencies": {
    "aframe": "^1.2.0",
    "aframe-environment-component": "^2.0.0",
    "aframe-extras": "^6.1.1",
    "aframe-particle-system-component": "^1.1.3",
    "aframe-spe-particles-component": "^1.0.4",
    "aframe-thickline-component": "^0.0.3",
    "chat": "^1.0.8",
    "comlink": "^4.3.0",
    "core-js": "^3.9.1",
    "he": "^1.2.0",
    "jquery": "^3.6.0",
    "linkifyjs": "^2.1.9",
    "paho-mqtt": "^1.1.0",
    "sweetalert2": "^10.15.5",
    "webxr-polyfill": "^2.0.3"
  },
  "devDependencies": {
    "eslint": "^7.21.0",
    "eslint-config-google": "^0.14.0",
    "jsdoc": "^3.6.6",
    "jsdoc-to-markdown": "^7.0.0",
    "parcel-bundler": "^1.12.4"
  },
  "scripts": {
    "watch": "cp src/apriltag/apriltag_wasm.* dist/; parcel watch src/index.js -o arena-core.js",
    "build": "cp src/apriltag/apriltag_wasm.* dist/; parcel build src/index.js -o arena-core.js --public-url ./dist",
    "build-main": "cp src/apriltag/apriltag_wasm.* dist/; parcel build src/index.js -o arena-core.js --public-url /dist",
    "docs": "echo '# A-Frame components (modules) added to support ARENA core functionality\n' > src/components/README.md; jsdoc2md src/components/*.js >> src/components/README.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/conix-center/ARENA-core.git"
  },
  "author": "CONIX Center",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/conix-center/ARENA-core/issues"
  },
  "homepage": "https://github.com/conix-center/ARENA-core#readme"
}
