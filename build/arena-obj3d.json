{
   "definitions":{
      "coord3d":{
         "type":"object",
         "required":[
            "x",
            "y",
            "z"
         ],
         "properties":{
            "x":{
               "type":"number"
            },
            "y":{
               "type":"number"
            },
            "z":{
               "type":"number"
            }
         }
      },
      "rot3d":{
         "type":"object",
         "required":[
            "x",
            "y",
            "z",
            "w"
         ],
         "properties":{
            "x":{
               "type":"number"
            },
            "y":{
               "type":"number"
            },
            "z":{
               "type":"number"
            },
            "w":{
               "type":"number"
            }
         }
      },
      "obj3d":{
         "type":"object",
         "title":"3D Object Data",
         "properties":{
            "object_type":{
               "type":"string",
               "title":"Object Type",
               "description":"The object type.",
               "enum":[
                  "cube",
                  "sphere",
                  "circle",
                  "cone",
                  "cylinder",
                  "dodecahedron",
                  "icosahedron",
                  "tetrahedron",
                  "octahedron",
                  "plane",
                  "ring",
                  "torus",
                  "torusKnot",
                  "triangle",
                  "gltf-model",
                  "image",
                  "text"
               ],
               "default":"cube"
            },
            "position":{
              "title":"Position",
              "description":"3D object position",
               "$ref":"#/definitions/coord3d"
            },
            "rotation":{
               "title":"Rotation",
               "description":"3D object rotation",
               "$ref":"#/definitions/rot3d"
            },
            "scale":{
              "title":"Scale",
              "description":"3D object scale",
               "$ref":"#/definitions/coord3d"
            },
            "color":{
               "type":"string",
               "format":"color",
               "title":"Color",
               "default":"#ffa500"
            },
            "url":{
               "type":"string",
               "format":"uri",
               "title":"Url",
               "description": "Model URL (store files under: store/users/<username>)"
            },
            "dynamic-body":{
               "type":"object",
               "title":"Physics",
               "description": "Physics type attached to the object.",
               "properties":{
                  "type":{
                     "type":"string",
                     "enum":[
                        "static",
                        "dynamic"
                     ]
                  }
               },
               "required":[ "type"]
            },
            "click-listener":{
                  "title":"Click Listner",
                  "type":"boolean"
            }
         },
         "required":[ "object_type"]
      }
   },
   "type":"object",
   "title":"3D Object",
   "properties":{
      "object_id":{
         "type":"string",
         "minLength": 5,
         "description": "A uuid or otherwise unique identifier for this object"
      },
      "action":{
         "type":"string",
         "description": "One of 3 basic Create/Update/Delete actions or a special client event action (e.g. a click)",
         "enum":[
            "create",
            "delete",
            "update",
            "clientEvent"
         ],
         "default":"create"
      },
      "type":{
         "type":"string",
         "enum":[
            "object"
         ]
      },
      "persist":{
         "type":"boolean",
         "default": "false",
         "description": "Persist this object in the database (default false = do not persist)"
      },
      "data":{
         "$ref":"#/definitions/obj3d",
         "description": "Object data payload; 3D Object data"
      }
   },
   "required":[
      "object_id",
      "action",
      "type",
      "data",
      "persist"
   ]
}
